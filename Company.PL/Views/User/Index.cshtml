@using Company.DAL.Models
@using Company.PL.Dtos

@model IEnumerable<UserToReturn>

@{
    ViewData["Title"] = "Index";
    // ViewData["Message"];
}

<h1>All Users</h1>

<br />
<br />


<form>
    <div class="container m-4">
        <div class="row">
            <div class="col-6"><input placeholder="Search By Name" name="SearchInput" class="form-control" /></div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>

    </div>
</form>


<br />
<br />

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>
                        @foreach(var role in item.Roles)
                        {
                            <span>@role</span>
                        }
                    </td>

                    <td>
                        <a asp-action="Details" asp-controller="User" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="User" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="User" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-auto alert alert-info">
        <h4>There are no Users</h4>
    </div>
}

